CREATE DATABASE CompanyDB;

USE CompanyDB;

CREATE TABLE Workers (
    S_No INT AUTO_INCREMENT PRIMARY KEY,
    Name VARCHAR(100),
    Designation VARCHAR(100),
    Branch VARCHAR(100)
);

ALTER TABLE Workers
ADD COLUMN Department VARCHAR(100);

INSERT INTO Workers (Name, Designation, Branch, Department) VALUES
    ('Alice Johnson', 'Software Engineer', 'New York', 'IT'),
    ('Bob Smith', 'Project Manager', 'Los Angeles', 'Management'),
    ('Charlie Brown', 'Data Analyst', 'Chicago', 'Data Science'),
    ('Diana Prince', 'HR Specialist', 'New York', 'Human Resources'),
    ('Evan Thomas', 'Accountant', 'San Francisco', 'Finance');

SELECT * FROM Workers;

UPDATE Workers
SET Branch = 'Boston'
WHERE Name = 'Charlie Brown';

SELECT * FROM Workers;

TRUNCATE TABLE Workers;

DROP TABLE Workers;
