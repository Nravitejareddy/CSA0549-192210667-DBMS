CREATE DATABASE IF NOT EXISTS my_database;

USE my_database;

DROP PROCEDURE IF EXISTS BuildStringUntilCondition;

DELIMITER $$

CREATE PROCEDURE BuildStringUntilCondition()
BEGIN
    DECLARE str VARCHAR(255) DEFAULT '';
    DECLARE counter INT DEFAULT 0;

    REPEAT
        SET str = CONCAT(str, 'Hello');
        SET counter = counter + 1;
    UNTIL counter > 5
    END REPEAT;

    SELECT str AS FinalString;
END $$

DELIMITER ;

CALL BuildStringUntilCondition();
